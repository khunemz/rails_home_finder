<div class="w-full">
  <% if notice.present? %>
    <div id="alert-2" class="flex p-4 mb-4 bg-green-100 rounded-lg dark:bg-green-200" role="alert">
    <svg aria-hidden="true" class="flex-shrink-0 w-5 h-5 text-green-700 dark:text-green-800" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
    <span class="sr-only">Info</span>
    <div class="ml-3 text-sm font-medium text-green-700 dark:text-green-800">
      <%= notice %>
    </div>
    <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-green-100 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex h-8 w-8 dark:bg-green-200 dark:text-green-600 dark:hover:bg-green-300" data-dismiss-target="#alert-2" aria-label="Close" onClick="closeAlert(event)">
      <span class="sr-only">Close</span>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
    </button>
  </div>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">List of you properties</h1>
    <%= link_to 'New property', new_property_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="properties" class="min-w-full">
    <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
        <table class="mt-2 w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <caption class="p-5 text-lg font-semibold text-left text-gray-900 bg-white dark:text-white dark:bg-gray-800">
              <p class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400">
                All your properties you have created!!
              </p>
            </caption>
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="py-3 px-6">
                        Id
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Name
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Address
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Price
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Rooms
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Bath rooms
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Last updated
                    </th>
                    <th scope="col" class="py-3 px-6">
                        <span class="sr-only">View</span>
                        <span class="sr-only">Edit</span>
                        <span class="sr-only">Delete</span>
                    </th>
                </tr>
            </thead>
            <tbody>


              <% if !@properties.empty? %>
                <% @properties.each do |property| %>
                  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                      <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= property.id %>
                      </th>
                      <td class="py-4 px-6">
                        <%= property.name %>
                      </td>
                      <td class="py-4 px-6">
                        <%= property.address %>
                      </td>
                      <td class="py-4 px-6">
                        $ <%= property.price %>
                      </td>
                      <td class="py-4 px-6">
                        <%= property.rooms %>
                      </td>
                      <td class="py-4 px-6">
                        <%= property.bathrooms %>
                      </td>
                      <td class="py-4 px-6">
                        <%= time_ago_in_words(property.created_at) %>
                      </td>
                      <td class="py-4 px-2 text-center">
                        <%= link_to "Show", property, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                        <%= link_to "Edit", edit_property_path(property), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                      </td>
                  </tr>
                <% end %>

              <% else %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                  <td class="py-4 px-6">No data to show</td>
                </tr>
              <% end %>
              
            </tbody>
        </table>
        <div class="flex justify-end items-end p-2">
          <%= paginate @properties %>
        </div>

    </div>

  </div>
</div>
